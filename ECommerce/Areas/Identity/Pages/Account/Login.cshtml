@page
@model LoginModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Log in</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <!-- Login Form Section -->
            <div class="col-md-8">
                <section>
                    <form id="account" method="post">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">
                            Use a local account to log in.
                        </h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                        </div>
                       @*  <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div> *@

                        <!-- Login Button and Forgot Password Link -->
                        <div class="d-flex align-items-center justify-content-between">
                            <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Log in</button>
@*                             <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
 *@                        </div>
                    </form>
                </section>
            </div>

            <!-- Sign Up Section -->
            <div class="col-md-4 d-flex flex-column align-items-center">
                <div class="card shadow-sm w-100">
                    <img src="https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d" class="card-img-top" alt="Sign Up">
                    <div class="card-body text-center">
                        <h5 class="card-title">New Here?</h5>
                        <p class="card-text">Create an account to get started.</p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-success w-100">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
